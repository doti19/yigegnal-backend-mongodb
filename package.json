{
  "name": "yigegnal-backend-mongodb",
  "version": "1.0.0",
  "description": "a node.js Express+MongoDb backend for the yigegnal platform",
  "main": "./src/server.js",
  "scripts": {
    "precommit": "yarn lint",
    "prestart": "yarn docs",
    "start": "cross-env NODE_ENV=production pm2 start ./src/server.js",
    "dev": "nodemon ./src/server.js",
    "lint": "eslint ./src/ --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:fix": "yarn lint --fix",
    "lint:watch": "yarn lint --watch",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 20000 --exit --recursive src/api/tests",
    "test:unit": "cross-env NODE_ENV=test mocha src/api/tests/unit",
    "test:integration": "cross-env NODE_ENV=test mocha --timeout 20000 --exit src/api/tests/integration",
    "test:watch": "cross-env NODE_ENV=test mocha --watch src/api/tests/unit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "postcoverage": "open-cli coverage/lcov-report/index.html",
    "validate": "yarn lint && yarn test",
    "postpublish": "git push --tags",
    "deploy": "sh ./deploy.sh",
    "docs": "apidoc -i src -o docs",
    "postdocs": "open-cli docs/index.html",
    "docker:start": "cross-env NODE_ENV=production pm2-docker start ./src/server.js",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --abort-on-container-exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/doti19/yigegnal-backend-mongodb.git"
  },
  "author": "Saminas Hagos",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/doti19/yigegnal-backend-mongodb/issues"
  },
  "homepage": "https://github.com/doti19/yigegnal-backend-mongodb#readme",
  "dependencies": {
    "apidoc": "^1.2.0",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.7.2",
    "body-parser": "^1.20.2",
    "chai": "^4.3.8",
    "chai-as-promised": "^7.1.1",
    "compression": "^1.7.4",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "dotenv-safe": "^8.2.0",
    "email-templates": "^11.1.1",
    "eslint": "^8.48.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "express": "^4.18.2",
    "express-joi-validation": "^5.0.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.9.0",
    "express-session": "^1.17.3",
    "express-validation": "^4.1.0",
    "helmet": "^7.0.0",
    "http-status": "^1.6.2",
    "husky": "^8.0.3",
    "joi": "^17.10.0",
    "jsonwebtoken": "^9.0.1",
    "jwt-simple": "^0.5.6",
    "lodash": "^4.17.21",
    "method-override": "^3.0.0",
    "mocha": "^10.2.0",
    "moment-timezone": "^0.5.43",
    "mongoose": "^7.4.5",
    "morgan": "^1.10.0",
    "nanoid": "^3.3.6",
    "nodemailer": "^6.9.4",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "opn-cli": "^5.0.0",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.1",
    "pick": "^0.0.1",
    "pm2": "^5.3.0",
    "pug": "^3.0.2",
    "qs": "^6.11.2",
    "sinon": "^15.2.0",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.3.3",
    "uuid": "^9.0.0",
    "validator": "^13.11.0",
    "winston": "^3.10.0",
    "xss-clean": "^0.1.4"
  }
}
